{
  "name": "@elrayes/dual-listbox",
  "version": "0.3.1",
  "type": "module",
  "description": "A zero-dependency (vanilla JS) dual list box with grouping, search, select-all, theming (Bootstrap/Tailwind), and TypeScript types.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./styles/*": "./styles/*",
    "./themes/*": "./themes/*"
  },
  "sideEffects": [
    "styles/*",
    "themes/*"
  ],
  "files": [
    "dist",
    "styles",
    "themes",
    "README.md",
    "LICENSE",
    "docs"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^24.1.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ahmed-Elrayes/dual-listbox.git"
  }
}
